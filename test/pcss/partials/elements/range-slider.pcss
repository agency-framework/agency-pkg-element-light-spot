.partial[data-partial="elements/range-slider"] {
  position: relative;
  padding: 1em;
  display: block;
  .range {
    position: relative;
    display: block;
    border-radius: 3px;
    background: #AAA;
    border: solid #666 1px;
    box-shadow: inset 0 0 3px rgba(0, 0, 0, 0.3);
  }
  .handler {
    display: block;
    >span {
      display: block;
        width: 100%;
        height: 100%;
      border-radius: 3px;
      background: #AAA;
      border: solid #666 1px;
      &:hover {
        background-color: #CCC;
      }
    }
  }
  &.js-is-move {
    .handler {
      >* {
        transform: scale(1.2)
      }
    }
  }
  &.js-direction-horizontal {
    width: calc(400 / 16)em;
    .range {
      width: 100%;
      height: 0.5em;
    }
    .handler {
      position: absolute;
      top: 0;
      left: 0;
      width: 1em;
      height: 2.5em;
      >span {
      }
    }
  }
  &.js-direction-vertical {
    height: calc(400 / 16)em;
    .range {
      width: 0.5em;
      height: 100%;
    }
    .handler {
      position: absolute;
      top: 0;
      left: 0;
      width: 2.5em;
      height: 1em;
      >span {

      }
    }
  }
}
