.partial[data-partial="elements/unsuitable-device-layer"] {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  color: #fff;
  img {
    position: absolute;
    top: 50%;
    left: 50%;
    height: 80%;
    transform: translate(-50%, -50%);
    filter: invert();
    opacity: 0.2;
    pointer-events: none;
  }
  >div {
    text-align: center;
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    transform: translate(-50%, -50%);
    h2 {
      margin: 0;
      margin-bottom: calc((20 / 320) * 100)vw;
      font-family: sans-serif;
      font-size: calc((30 / 320) * 100)vw;
      text-align: center;
      letter-spacing: 1px;
      text-transform: uppercase;
    }
    p {
      margin: 0;
      margin-bottom: calc((20 / 320) * 100)vw;
      padding: 0 5vw;
      text-align: center;
      line-height: 2;
      font-size: calc((18 / 320) * 100)vw;
    }
  }
  @media (orientation: landscape) {
    >div {
      h2 {
        margin-bottom: calc((10 / 320) * 100)vw;
        font-size: calc((15 / 320) * 100)vw;
      }
      p {
        margin-bottom: calc((10 / 320) * 100)vw;
        font-size: calc((9 / 320) * 100)vw;
      }
    }
  }
}
